<h2>支払い方法</h2>
<%= form_for @creditcard do |f| %>
  <div class ="field">
    <%= f.label :カード番号 %><br />
    <%= f.text_field :card_number %>
  </div>

  <div class ="field">
    <%= f.label :有効期限 %><br />
    
    <%= f.text_field :limit_month %>
    <%= f.text_field :limit_year %>
  </div>

  <div class ="field">
    <%= f.label :セキュリティコード %><br />
    <%= f.text_field :security_code %>
  </div>

  <div class="actions">
    <%= f.submit "次へ進む" %>
  </div>
<% end %>