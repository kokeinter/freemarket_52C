%script{:src => "https://js.pay.jp/", :type => "text/javascript"}
.creditcards
  .logo-creditcards
    %a{href: root_path}
      = image_tag 'logo2.png', class: "user-form__main-logo"
    .logo-2
      = image_tag 'creditcard-chart.png', class: "chart"
  .creditcard-contents
    %h2 支払い方法
    .one-creditcards
      %form#charge-form{:action => "/creditcards", :method => "POST"}
        .field-creditcards.user-creditcards-form__border
          .label-creditcards
            %label カード番号
            %label.creditcards-label 必須
            %br/
          .text-creditcards
            %input{:maxlength => "16", :name => "number", :placeholder => "Card #", :type => "text",class:"form-creditcards"}/
          .creditcards-logo
            = image_tag 'creditcards.png'
        .field-creditcards
          .label-creditcards
            %label 有効期限
            %label.creditcards-label 必須
            %br/
          .text-creditcards
            %select.select-creditcards{:name => "exp_year"}
              %option{value: ""} 年
              %option{value: "2029"} 2029
              %option{value: "2028"} 2028
              %option{value: "2027"} 2027
              %option{value: "2026"} 2026
              %option{value: "2025"} 2025
              %option{value: "2024"} 2024
              %option{value: "2023"} 2023
              %option{value: "2022"} 2022
              %option{value: "2021"} 2021
              %option{value: "2020"} 2020
              %option{value: "2019"} 2019
            %select.select-creditcards-month{:name => "exp_month"}
              %option{value: ""} 月
              %option{value: "1"} 1
              %option{value: "2"} 2
              %option{value: "3"} 3
              %option{value: "4"} 4
              %option{value: "5"} 5
              %option{value: "6"} 6
              %option{value: "7"} 7
              %option{value: "8"} 8
              %option{value: "9"} 9
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            .credit-error
        .field-creditcards
          .label-creditcards
            %label セキュリティーコード
            %label.creditcards-label 必須
            %br/
          .text-creditcards
            %input{:maxlength => "4", :name => "cvc", :placeholder => "カード背面4桁もしくは3桁の番号", :type => "text",class:"form-creditcards"}/
            %input{value:"#{@user.id}", :name => "user_id", :type => "hidden"}
            %input{value:"#{@publickey}", :type => "hidden",class:"test"}
          .help-creditcards
            =link_to "カード裏面の番号とは？",class:"link-creditcards"
        .actions-creditcards
          %button{:type => "submit",class:"btn-creditcards" } 次へ進む
        #result
    %button.ui.button.fill{:tabindex => "0"}
      サンプルのカード番号を使う
  = render '/items/buy_footer'
