%h2 発送元・お届け先住所入力
= form_for @address do |f|
  .field
    = f.label :お名前　必須
    %br/
    = f.text_field :first_name,placeholder:'例）山田'
    = f.text_field :last_name,placeholder:'例）彩'
  .field
    = f.label :お名前カナ　必須
    %br/
    = f.text_field :kana_first_name,placeholder:'例）ヤマダ'
    = f.text_field :kana_last_name,placeholder:'例）アヤ'
  .field
    = f.label :郵便番号　必須
    %br/
    = f.text_field :post_id,placeholder:'例）123-4567'
  .field
    = f.label :都道府県　必須
    %br/
    = f.text_field :prefecture,placeholder:'例）神奈川県'
  .field
    = f.label :市町村　必須
    %br/
    = f.text_field :city,placeholder:'例）横浜市緑区'
  .field
    = f.label :番地　必須
    %br/
    = f.text_field :address,placeholder:'例）青山1-1-1'
  .field
    = f.label :建物名　任意
    %br/
    = f.text_field :building,placeholder:'例）柳ビル103'
  
  .actions
    = f.submit "次へ進む"
