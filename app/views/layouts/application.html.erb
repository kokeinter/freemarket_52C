<!DOCTYPE html>
<html>
  <head>
    <title>Freemarket52c</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

  </head>
  <body>
    <%= link_to "トップページ","/" %>
    <%= link_to "ログアウト",destroy_user_session_path, method: :delete %>
    <%= link_to "ログイン",new_user_session_path,method: :get %>
    <%= link_to "新規登録","/users/new" %>
    <%= link_to "出品する",new_item_path, method: :get %>
    <%= link_to "購入確認","/buy"%>
    <%= link_to "マイページ","/users/#{current_user.id}/mypage"%>
    <%= link_to "本人情報","/users/#{current_user.id}/info"%>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </body>
</html>
